<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sped_view" model="ir.ui.view">
        <field name="name">SPED ICMS IPI</field>
        <field name="model">sped.file</field>
        <field name="arch" type="xml">
        <form string="Gerar arquivo SPED">
            <group>
                <field name="company_id" options='{"no_create" : 1, "no_create_edit" : 1}'/>    
                <field name="tipo_arquivo" widget="radio" />
            </group>
            <group col="4">
                <field name="date_start"/>
                <field name="date_end"/>
            </group>
            <group col="4">
                <field name="data_vencimento_e316"/>
                <field name="cod_obrigacao"/>
                <field name="cod_receita"/>
            </group>    
            <group col="4">
                <field name="vl_sld_cred_ant_difal"/>
                <field name="vl_sld_cred_transp_difal"/>
                <field name="vl_sld_cred_ant_fcp"/>
                <field name="vl_sld_cred_transp_fcp"/>
            </group>
            <group>
                <field name="sped_file_name" invisible="1"/>
                <field widget="binary" height="64" name="sped_file" filename="sped_file_name" />
            </group>
            <field name="log_faturamento" readonly="1"/>
            <footer>
                <button name="create_file" string="Gerar Arquivo" type="object" default_focus="1" class="oe_highlight"/>
                ou
                <button string="Cancelar" class="oe_link" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_sped_create" model="ir.actions.act_window">
        <field name="name">Sped ICMS/IPI</field>
        <field name="res_model">sped.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sped_view"/>
        <field name="target">new</field>
    </record>
    
    <record id="view_sped_file_tree" model="ir.ui.view">
        <field name="name">view_sped_file_tree</field>
        <field name="model">sped.file</field>
        <field name="arch" type="xml">
            <tree string="Gerar arquivo SPED">
                <field name="company_id"/>    
                <field name="tipo_arquivo"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="sped_file_name"/>
            </tree>
        </field>
    </record>


    <record id="action_sped_tree_menu" model="ir.actions.act_window">
        <field name="name">Sped ICMS/IPI</field>
        <field name="res_model">sped.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_general_sped_icmsipi" action="action_sped_tree_menu" parent="account.menu_finance_receivables" sequence="99" groups="account.group_account_invoice"/>
</odoo>
